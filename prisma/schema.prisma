datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Todo {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    title     String
    slug      String?  @unique
    body      String?
    completed Boolean  @default(false)
    userId   String
    createdAt DateTime @default(now())
}

